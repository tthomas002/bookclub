<h1>Books</h1>

<% if current_user.admin? %>
  <%= link_to 'New Book', new_book_path %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to "#{book.title}", book_chapters_path(book), id: "book-title-link" %></td>
        <% if current_user.admin? %>
        <td>
          <%= link_to "Edit", edit_book_path(book), class: "book-edit-link" %>
        </td>
        <td>
          <%= link_to "Delete", book, method: :delete, data: { confirm: "Deleting the book will delete all associated chapters and posts, are you sure you wish to continue?" } %>
        </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
